{
    "name": "crity",
    "version": "0.0.1",
    "description": "A template for your MME Projects",
    "type": "module",
    "main": "index.js",
    "watch": {
        "startDevServer": {
            "patterns": [
                "app/src"
            ],
            "extensions": "js",
            "inherit": true,
            "clearBuffer": true
        }
    },
    "scripts": {
        "test": "echo \"Error: no test specified\" && exit 1",
        "dev": "npm-watch",


        "tailwindOneShot": "npx tailwindcss -c ./tailwind.config.cjs -i ./app/resources/css/style.css -o ./dist/style.css",
        "tailwindWatch": "npm run tailwindOneShot -- --watch",
        "webpackOneShot": "webpack",
        "webpackWatch": "npm run webpackOneShot -- --watch",
        "startDevServer": "node start_dev_server.js",

        "build": "npm run webpackOneShot && npm run tailwindOneShot && node build_for_deployment.js",
        "devSession": "concurrently --kill-others \"npm run tailwindWatch\" \"npm run webpackWatch\" \"npm run startDevServer\"",

        "check": "eslint app/src/",
        

        "prebuild": "npm install && npm run check"
    },
    "author": "",
    "license": "MIT",
    "//": "Keep the appwrite version old, newer versions introduced storage buckets which break our app.",
    "devDependencies": {
        "appwrite": "6.0.1",
        "concurrently": "^7.0.0",
        "css-loader": "^6.6.0",
        "dotenv": "^16.0.0",
        "eslint": "^8.8.0",
        "express": "^4.17.2",
        "fs-extra": "^10.0.0",
        "html-loader": "^3.1.0",
        "html-webpack-plugin": "^5.5.0",
        "mini-css-extract-plugin": "^2.5.3",
        "nodemon": "^2.0.15",
        "npm-watch": "^0.11.0",
        "open": "^8.4.0",
        "pdfjs-dist": "^2.13.216",
        "prettier": "^2.5.1",
        "prettier-plugin-tailwindcss": "^0.1.7",
        "tailwindcss": "^3.0.23",
        "webpack": "^5.69.1",
        "webpack-cli": "^4.9.2",
        "worker-loader": "^3.0.8"
    },
    "dependencies": {
        "version": "^0.0.4"
    }
}
