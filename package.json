{
    "name": "crity",
    "version": "0.0.1",
    "description": "A template for your MME Projects",
    "type": "module",
    "main": "index.js",
    "watch": {
        "runDevelopementServer": {
            "patterns": [
                "app/src"
            ],
            "extensions": "js",
            "inherit": true,
            "clearBuffer": true
        }
    },
    "scripts": {
        "test": "echo \"Error: no test specified\" && exit 1",
        "dev": "npm-watch",
        "runDevelopementServer": "node start_dev_server.js",
        "build": "node build_for_deployment.js",
        "build-css": "npx tailwindcss -c ./tailwind.config.cjs -i ./app/resources/css/style.css -o ./app/resources/public/style.css --watch",
        "check": "eslint app/src/",
        "prebuild": "npm install && npm run check",
        "deployUberFunc": "cd server && npm i && cd .. && tar -zcvf code.tar.gz server && node deploy_uber_func.js"
    },
    "author": "",
    "license": "MIT",
    "devDependencies": {
        "dotenv": "^16.0.0",
        "eslint": "^8.8.0",
        "express": "^4.17.2",
        "fs-extra": "^10.0.0",
        "node-appwrite": "^4.0.2",
        "nodemon": "^2.0.15",
        "npm-watch": "^0.11.0",
        "open": "^8.4.0",
        "prettier": "^2.5.1",
        "prettier-plugin-tailwindcss": "^0.1.7",
        "tailwindcss": "^3.0.23"
    },
    "dependencies": {
        "version": "^0.0.4"
    }
}
